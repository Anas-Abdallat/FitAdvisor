@model List<FitAdvisor.Models.STUDENT>


<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    /* Add custom CSS styles here */
    table {
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 20px;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .btn-view {
        background-color: #28a745;
        color: white;
    }

    .btn-edit {
        background-color: #007bff;
        color: white;
    }

    .btn-deactivate {
        background-color: #dc3545;
        color: white;
    }

    .btn-add {
        background-color: #17a2b8;
        color: white;
    }

    .btn-link {
        text-decoration: none;
    }

    .btn {
        padding: 5px 10px;
        margin-right: 5px;
        border-radius: 3px;
    }

        .btn:hover {
            opacity: 0.8;
        }
</style>

<div class="container">
    <h2>Students</h2>

    @if (Model.Count == 0)
    {
        <p>No Students found.</p>
    }
    else
    {
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Department</th>
                <th>Student Number</th>
                <th>Email</th>
                <th></th>
            </tr>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.ID</td>
                    <td>@student.FULL_NAME</td>
                    <td>@student.DEPARTMENT</td>
                    <td>@student.STUDENT_NUMBER</td>
                    <td>@student.EMAIL</td>
                    <td>
                        <a href="@Url.Action("ViewStudents", new { id = student.ID })" class="btn btn-view">View</a>
                        <a href="@Url.Action("EditStudentsAccount", new { id = student.ID })" class="btn btn-edit">Edit</a>
                        <a href="@Url.Action("DeactivateStudentsAccount", new { id = student.ID })" class="btn btn-deactivate">Deactivate</a>
                    </td>
                </tr>
            }
        </table>
    }
    <p><a href="@Url.Action("AddnewStudents")" class="btn btn-add">Add New Student</a></p>

</div>