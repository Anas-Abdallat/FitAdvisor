@model List<FitAdvisor.Models.COURSE>

<h2>Courses</h2>

@if (Model.Count == 0)
{
    <p>No Courses found.</p>
}
else
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Credit Hours</th>
            <th>Department</th>
            <th>Course Number</th>
            <th>Instructor</th>
            <th></th>
        </tr>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.ID</td>
                <td>@course.NAME</td>
                <td>@course.CREDIT_HOURS</td>
                <td>@course.DEPARTMENT</td>
                <td>@course.COURSE_NUMBER</td>
                @if (course.INSTRUCTOR_COURSE != null && course.INSTRUCTOR_COURSE.Count() != 0)
                {
                    foreach (var item in course.INSTRUCTOR_COURSE)
                    {
                        <td>@item.INSTRUCTOR.FULL_NAME</td>
                        break;
                    }

                }
                else
                {
                    <td></td>
                }
                <td>
                    @Html.ActionLink("Register", "OnlineRegestraion", new { id = course.ID })
                </td>
            </tr>
        }
    </table>
}