@{
    ViewBag.Title = "Student Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Adjust layout as needed
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SearchForInstructor", "Instructor", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("instructorId", "Instrctor ID:", htmlAttributes: new { @class = "control-label" })
        @Html.TextBox("instructorId", null, new { @class = "form-control" })
        @Html.ValidationMessage("instructorId", "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Display" class="btn btn-primary" />
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (Model != null)
{
    <h3>Student Course Schedule</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>instructor ID</th>
                <th>instructor Name</th>
                <th>instructor Number</th>
                <th>instructor Enail</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ID</td>
                <td>@Model.FULL_NAME</td>
                <td>@Model.INSTRUCTOR_NUMBER</td>
                <td>@Model.EMAIL</td>
            </tr>
        </tbody>
    </table>
}
