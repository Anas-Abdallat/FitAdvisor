@model int

@{
    ViewBag.Title = "Send Message";
    Layout = "~/Views/Shared/_Layout.cshtml"; // You can adjust the layout path as needed
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("selectedInstructorId", "Select Instructor:", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownList("selectedInstructorId", (SelectList)ViewBag.Instructors, "Select an Instructor", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("messageText", "Message:", htmlAttributes: new { @class = "control-label" })
        @Html.TextArea("messageText", null, new { @class = "form-control", rows = 4 })
    </div>

    <div class="form-group">
        <input type="submit" value="Send Message" class="btn btn-primary" />
        @Html.ActionLink("Back to Dashboard", "Index", "Home", null, new { @class = "btn btn-default" })
    </div>
}
