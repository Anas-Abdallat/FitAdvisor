@model List<FitAdvisor.Models.INSTRUCTOR_COURSE>

<h2>Instructors</h2>

@if (Model.Count == 0)
{
    <p>No instructors found.</p>
}
else
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>instructor ID</th>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Note</th>
            <th></th>
        </tr>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>@instructor.ID</td>
                <td>@instructor.ID_INSTRUCTOR</td>
                <td>@instructor.ID_COURSE</td>
                <td>@instructor.COURSE.NAME</td>
                <td>@instructor.INSTRUCTOR_NOTE</td>
                <td>
                    @Html.ActionLink("Add Note", "AddNote", new { id = instructor.ID }) |
                </td>
            </tr>
        }
    </table>
}
