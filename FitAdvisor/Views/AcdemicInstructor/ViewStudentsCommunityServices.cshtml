
<style>
    /* Custom CSS styles */
    table.table-bordered {
        border: 2px solid #dee2e6;
    }

        table.table-bordered > thead > tr > th {
            border: 2px solid #dee2e6;
            background-color: #f8f9fa;
        }

        table.table-bordered > tbody > tr > td {
            border: 2px solid #dee2e6;
        }

    table.table-hover > tbody > tr:hover {
        background-color: #f0f0f0;
    }
</style>
<h2>Courses</h2>

@{
    ViewBag.Title = "View Students Community Services";
}

<h2>View Students Community Services</h2>

<h3>Existing Community Services</h3>
<table class="table">
    <thead>
        <tr>
            <th>Student</th>
            <th>Hours Passed</th>
            <th>Activity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in ViewBag.CommunityServices)
        {
            <tr>
                <td>@service.STUDENT.FULL_NAME</td>
                <td>@service.HOURS_PASSED</td>
                <td>@service.ACTIVITY</td>
            </tr>
        }
    </tbody>
</table>

<h3>Add Community Service</h3>
@using (Html.BeginForm("ViewStudentsCommunityServices", "AcdemicInstructor", new { instructorId = ViewBag.InstructorId }, FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Select Students:")
        @Html.ListBox("studentIds", new MultiSelectList(ViewBag.Students, "ID", "FULL_NAME"), new { @class = "form-control", multiple = "multiple" })
    </div>

    <div class="form-group">
        @Html.Label("Hours Passed:")
        @Html.TextBox("hoursPassed", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Activity:")
        @Html.TextBox("activity", null, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Add Community Service</button>
}
